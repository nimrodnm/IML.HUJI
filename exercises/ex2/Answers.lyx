\begin_layout Proof
נראה ש- 
\begin_inset Formula $\hat{w}=\overline{w}$
\end_inset

.
 נציב את ה-
\begin_inset Formula $\text{compact SVD}$
\end_inset

 של 
\begin_inset Formula $X$
\end_inset

 בנוסחא של 
\begin_inset Formula $\overline{w}$
\end_inset

 ונקבל:
\begin_inset Formula 
\begin{align*}
\overline{w}=\left[X^{\top}X\right]^{-1}X^{\top}y & =\left[\left(\tilde{U}\tilde{\Sigma}\tilde{V}^{\top}\right)^{\top}\tilde{U}\tilde{\Sigma}\tilde{V}^{\top}\right]^{-1}\left(\tilde{U}\tilde{\Sigma}\tilde{V}^{\top}\right)^{\top}y=\left[\tilde{V}\tilde{\Sigma}^{\top}\tilde{U}^{\top}\tilde{U}\tilde{\Sigma}\tilde{V}^{\top}\right]^{-1}\tilde{V}\tilde{\Sigma}^{\top}\tilde{U}^{\top}y=\\
{\color{gray}\begin{array}{c}
\text{\R{\text{\ensuremath{\tilde{U}} אורתוגונלית}}}\\
\text{\R{\text{\ensuremath{\tilde{\Sigma}} אלכסונית ריבועית}}}
\end{array}\rightarrow} & =\left[\tilde{V}\tilde{\Sigma}^{2}\tilde{V}^{\top}\right]^{-1}\tilde{V}\tilde{\Sigma}\tilde{U}^{\top}y=\\
{\color{gray}\text{\R{\text{לפי הלמה כי \ensuremath{\tilde{V}} אורתוגונלית}}}\rightarrow} & =\tilde{V}\left[\tilde{\Sigma}^{2}\right]^{-1}\tilde{V}^{\top}\tilde{V}\tilde{\Sigma}\tilde{U}^{\top}y=\\
{\color{gray}\text{\R{\text{\ensuremath{\tilde{V}} אורתוגונלית}}}\rightarrow} & =\tilde{V}\left[\tilde{\Sigma}^{2}\right]^{-1}\tilde{\Sigma}\tilde{U}^{\top}y={\color{blue}\bigstar}
\end{align*}

\end_inset

